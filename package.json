{
  "name": "vanilla",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm run swap-dev && tsc && vite build && pnpm run swap-prod",
    "coverage": "vitest run --coverage",
    "dev": "pnpm run swap-dev && vite",
    "e2e-cy": "pnpm cypress run --browser electron",
    "e2e-cy-ui": "pnpm cypress open",
    "e2e-pw": "pnpm exec playwright test",
    "e2e-pw-ui": "pnpm exec playwright test --ui",
    "preview": "pnpm run build && vite preview",
    "swap": "node ./scripts/swap-index-urls.mjs",
    "swap-prod": "pnpm run swap -- --prod",
    "swap-dev": "pnpm run swap -- --dev",
    "test": "vitest",
    "lint": "pnpm run format && eslint . --fix",
    "format-check": "prettier . --check --ignore-unknown --cache",
    "format-fix": "prettier . --write --ignore-unknown --cache",
    "format-staged": "prettier . --write --cache",
    "format": "pnpm run format-fix",
    "type-check": "tsc --noEmit",
    "ci-lint": "eslint .",
    "ci-format-check": "pnpm format-check",
    "ci-type-check": "pnpm type-check",
    "ci-test": "pnpm coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@playwright/test": "^1.47.1",
    "@types/node": "^22.5.5",
    "@vitest/coverage-v8": "^2.1.1",
    "autoprefixer": "^10.4.16",
    "cypress": "^13.14.2",
    "eslint": "^9.11.1",
    "globals": "^15.9.0",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.0.2",
    "typescript-eslint": "^8.7.0",
    "vite": "^4.5.5",
    "vitest": "^2.1.1"
  },
  "packageManager": "pnpm@8.15.4+sha512.0bd3a9be9eb0e9a692676deec00a303ba218ba279d99241475616b398dbaeedd11146f92c2843458f557b1d127e09d4c171e105bdcd6b61002b39685a8016b9e"
}
